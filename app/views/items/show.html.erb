<%= render "shared/header" %>

<div class="item-show">
  <div class="item-box">
    <h2 class="name"><%= @item.item_name %></h2>

    <%# 画像表示とSOLD OUTラベル %>
    <div class="item-img-content">
      <%= image_tag @item.image, class:"item-box-img" %>
      <% if @item.sold_out? %>
        <div class="sold-out">
          <span>Sold Out!!</span>
        </div>
      <% end %>
    </div>

    <div class="item-price-box">
      <span class="item-price"><%= @item.amount %>円</span>
      <span class="item-postage"><%= @item.shipping_charge.name %></span>
    </div>

    <%# ボタン表示 %>
    <% if user_signed_in? %>
      <% if current_user == @item.user %>
        <%# 自分の出品物 → 編集・削除ボタン %>
        <%= link_to "商品の編集", edit_item_path(@item), class: "item-red-btn" %>
        <p class="or-text">or</p>
        <%= link_to "削除", item_path(@item), data: { turbo_method: :delete }, class:"item-destroy" %>
      <% else %>
        <% unless @item.sold_out? %>
          <%# 他人の出品物 & まだ売れてない → 購入ボタン表示 %>
          <%= link_to "購入画面に進む", item_orders_path(item_id: @item.id), data: { turbo: false }, class:"item-red-btn" %>
        <% end %>
      <% end %>
    <% end %>

    <%# 商品説明 %>
    <div class="item-explain-box">
      <span><%= @item.item_explanation %></span>
    </div>

    <%# 詳細テーブル %>
    <table class="detail-table">
      <tbody>
        <tr>
          <th class="detail-item">出品者</th>
          <td class="detail-value"><%= @item.user.nickname %></td>
        </tr>
        <tr>
          <th class="detail-item">カテゴリー</th>
          <td class="detail-value"><%= @item.category.name %></td>
        </tr>
        <tr>
          <th class="detail-item">商品の状態</th>
          <td class="detail-value"><%= @item.situation.name %></td>
        </tr>
        <tr>
          <th class="detail-item">配送料の負担</th>
          <td class="detail-value"><%= @item.shipping_charge.name %></td>
        </tr>
        <tr>
          <th class="detail-item">発送元の地域</th>
          <td class="detail-value"><%= @item.shipping_area.name %></td>
        </tr>
        <tr>
          <th class="detail-item">発送日の目安</th>
          <td class="detail-value"><%= @item.delivery_time.name %></td>
        </tr>
      </tbody>
    </table>

    <%# お気に入り・通報ボタン %>
    <div class="option">
      <div class="favorite-btn">
        <%= image_tag "star.png", class:"favorite-star-icon", width:"20", height:"20" %>
        <span>お気に入り 0</span>
      </div>
      <div class="report-btn">
        <%= image_tag "flag.png", class:"report-flag-icon", width:"20", height:"20" %>
        <span>不適切な商品の通報</span>
      </div>
    </div>
  </div>

  <%# コメント欄 %>
  <div class="comment-box">
    <form>
      <textarea class="comment-text"></textarea>
      <p class="comment-warn">
        相手のことを考え丁寧なコメントを心がけましょう。
        <br>
        不快な言葉遣いなどは利用制限や退会処分となることがあります。
      </p>
      <button type="submit" class="comment-btn">
        <%= image_tag "comment.png", class:"comment-flag-icon", width:"20", height:"25" %>
        <span>コメントする</span>
      </button>
    </form>
  </div>

  <%# 前後の商品リンク %>
  <div class="links">
    <a href="#" class="change-item-btn">＜ 前の商品</a>
    <a href="#" class="change-item-btn">後ろの商品 ＞</a>
  </div>

  <a href="#" class="another-item"><%= @item.category.name %>をもっと見る</a>
</div>

<%= render "shared/footer" %>
